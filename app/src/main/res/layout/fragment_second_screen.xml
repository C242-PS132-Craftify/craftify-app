<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.onboarding.screen.SecondScreen">


    <TextView
        android:id="@+id/tv_scan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scan and Get Inspired"
        android:layout_marginTop="30dp"
        android:textSize="45sp"
        android:fontFamily="@font/poppinsextrabold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="32dp"
        android:textColor="@color/green"
        />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Use AI-powered scanning to identify your items and get unique, step-by-step crafting ideas instantly. Simple, smart, and eco-friendly!"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:fontFamily="@font/poppinsextrabold"
        app:layout_constraintTop_toBottomOf="@id/tv_scan"
        android:layout_marginHorizontal="32dp"
        android:textColor="@color/green"
        />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="500dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_desc"
        android:src="@drawable/mockup"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/poppinsbold"
        android:textSize="18sp"
        android:text="Next"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="32dp"
        android:textColor="@color/blue"
        />



</androidx.constraintlayout.widget.ConstraintLayout>